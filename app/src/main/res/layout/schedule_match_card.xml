<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/series_tv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="ICC world cup, 2019"
            android:textColor="@color/colorSecondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/team_1_tv"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="IND"
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@id/time_tv"
            app:layout_constraintEnd_toStartOf="@id/format_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/series_tv" />

        <TextView
            android:id="@+id/format_tv"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textAllCaps="true"
            android:text="OD"
            android:textSize="15sp"
            android:textColor="@color/colorSecondary"
            app:layout_constraintBottom_toTopOf="@id/time_tv"
            app:layout_constraintEnd_toStartOf="@id/team_2_tv"
            app:layout_constraintStart_toEndOf="@id/team_1_tv"
            app:layout_constraintTop_toBottomOf="@id/series_tv" />

        <TextView
            android:id="@+id/team_2_tv"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="PAK"
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@id/time_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/format_tv"
            app:layout_constraintTop_toBottomOf="@id/series_tv" />

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="top |center"
            android:text="03:59:59"
            android:textColor="@color/colorSecondary"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
